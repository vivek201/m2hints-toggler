{
    "name": "DevTogger for Magento2",
    "version": "1.0",
    "description": "One click toggler for Magento 2 sites",
    "permissions": [
        "declarativeContent",
        "activeTab",
        "storage"
    ],
    "page_action": {
        "default_title": "Toggle Template Path Hints"
    },
    "background": {
        "scripts": [
            "rules.js",
            "background.js"
        ],
        "persistent": false
    },
    "options_page": "options.html",
    "manifest_version": 2
}